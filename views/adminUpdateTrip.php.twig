{% extends 'templates/template.php.twig' %}
{% block title %}
    Modifier un transport
{% endblock %}

{% block content %}
    {% include 'navigations/adminNav.php.twig' %}
<p style="font-size: 35px; text-align: center">Modifier un <span style="color: #8c6bf9">voyage</span></p>
<br/>
<div id="ligne_point">
    <div class="ligne_1">
        <hr>
    </div>
    <div class="cercle">
        <div class="point"></div>
    </div>
    <div class="ligne_2">
        <hr>
    </div>
</div>

<div id="ContentMapAndTrip">
    <div style="margin-left: 15%; margin-top: 10%" id="Trip">
            <h1>
            <span> {{ trip.departure_city }} <i style="color:#0082ff;" class="far fa-arrow-alt-circle-right fa-1x"></i> {{ trip.finishing_city }} </span> <br/>
            </h1>

                <h2>Le : <span style="color: #0082ff">{{ trip.date_transport }}</span>  <br/>
                Charge à transporter : <span style="color: #0082ff">{{ trip.weight }}</span>  Tonnes <br/>
                Prix/ T HT : <span style="color:#0082ff;">{{ trip.price_ton }}</span>  €</h2>

        <h2>
            Prix Total Hors Taxes : <span style="color: #0082ff">{{ trip.price_ton * trip.weight }}</span> €
        </h2>

    </div>
<fieldset style="margin: auto" id="addTrip">
    <legend>Ajouter un transport</legend>
    <form action="index.php?action=update&idTrip={{ trip.id }}" method="POST">
        <label> Ville de départ
            <select name="departure_city">
                {% for city in cities %}
                    <option value='{{ city.id }}'>{{ city.name }}</option>
                {% endfor %}
            </select>
        </label>

        <label> Ville d'arriver
            <select name="finishing_city">
                {% for city in cities %}
                    <option value='{{ city.id }}'>{{ city.name }}</option>
                {% endfor %}
            </select>
        </label>
        <label>Prix de la tonne :<input type="number" step="0.01" placeholder="Ex : 1,25" name="price_ton" value="{{ trip.price_ton }}" required></label>
        <label>Poid total : <input type="number" placeholder="Ex : 1900" name="weight" value="{{ trip.weight }}" required></label>
        <label>Date du transport <input type="date" name="date_transport" placeholder="Format : DD/MM/AAAA" value="{{ trip.date_transport }}" required></label>
        <input type="submit" name="send_trip" value="Créer le voyage">
    </form>
</fieldset>
</div>
{% endblock %}
