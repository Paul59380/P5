{% extends 'templates/template.php.twig' %}
{% block title %}
    Trouver un bateau
{% endblock %}

{% block content %}
    {% include 'navigations/adminNav.php.twig' %}
    <p style="font-size: 35px; text-align: center; margin-top: 150px">Rechercher un <span
                style="color: #8c6bf9">bateau</span>
    </p>
    <br/>
    <div id="ligne_point">
        <div class="ligne_1">
            <hr>
        </div>
        <div class="cercle">
            <div class="point"></div>
        </div>
        <div class="ligne_2">
            <hr>
        </div>
    </div>


    <div id="TripSearch">
        {% for trip in trips %}
        <p>
            <span style="font-size: 25px"> {{ trip.departure_city }} <i style="color:#8c6bf9;" class="far fa-arrow-alt-circle-right fa-1x"></i> {{ trip.finishing_city }}
            </span> <br/>
            <span style="font-size: 20px">Le : {{ trip.date_transport }}  <br/>
            Charge Ã  transporter : {{ trip.weight }}</span>
        </p>
        <a class="return" href="index.php?action=adminSearchBoat&capacity={{ trip.weight }}&idTrip={{ trip.id }}&d_city={{ trip.departure_city }}&d_lat={{ trip.lat_departure }}&d_lon={{ trip.lon_departure }}&f_city={{ trip.finishing_city }}&f_lat={{ trip.lat_finishing }}&f_lon={{ trip.lon_finishing }}">Rechercher</a> <br/>

        <br/>
        {% endfor %}
    </div>
{% endblock %}
